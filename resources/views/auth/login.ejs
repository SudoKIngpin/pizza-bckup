<!-- Login card Section -->
<section class="login flex justify-center items-center h-screen ">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 w-1/3">
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
          Username
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700"
          id="username"
          type="text"
          placeholder="Username"
        >
      </div>
      <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
          Password
        </label>
        <input
          class="shadow appearance-none w-full py-2 px-3 text-gray-700 mb-3"
          id="password"
          type="password"
          placeholder="******************"
        >
        <p class="text-gray-600 text-sm italic">Log in to your account.</p>
      </div>
      <div class="flex items-center justify-between">
        <button class="btn-primary rounded-full font-bold text-white bg-blue-500 hover:bg-blue-600 py-2 px-6" type="submit">
          Log in
        </button>
        <a class="inline-block align-baseline font-bold text-sm text-red hover:text-white-700" href="#">
          Forgot Password?
        </a>
      </div>
    </div>
  

    
  </section>

